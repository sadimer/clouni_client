[Unit]
Description=grpc-cotea service
After=network.target

[Service]
Type=simple
Environment='PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin/'
PIDFile=/run/grpc-cotea.pid
ExecStart=/usr/local/bin/grpc-cotea -p {{ port }} --host {{ ansible_default_ipv4.address }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
